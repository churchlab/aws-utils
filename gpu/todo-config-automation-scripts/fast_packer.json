{
  "variables": {
    "region": "us-east-1",
    "source_ami": "ami-d15a75c7",
    "subnet_id": "subnet-712d181f",
    "vpc_id": "vpc-XXXXX",
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "ssh_username": "ubuntu",
      "ami_name": "fast-packer-node {{isotime \"2006-01-02T15:04:05Z\" | clean_ami_name}}",
      "instance_type": "t2.medium",
      "subnet_id": "{{user `subnet_id`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "enhanced_networking": true,
      "launch_block_device_mappings": [{
        "delete_on_termination": true,
        "device_name": "/dev/sda1",
        "volume_size": 20,
        "volume_type": "gp2"
      }]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get install libcupti-dev"
      ]
    },
    {
      "type": "shell",
      "script": "./install_nvidia.sh",
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    },
    {
      "type": "ansible",
      "playbook_file": "./fast_playbook.yml",
      "extra_arguments": "-vv"
    },
    {
      "type": "shell",
      "script": "./install_python.sh",
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./install_tensorflow.sh",
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./install_ena.sh",
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./cleanup.sh",
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    }
  ]
}
